package android.mobile.HatfieldHall;

import java.util.ArrayList;
import java.util.List;

import android.app.Activity;
import android.os.Bundle;
import android.widget.AdapterView.OnItemSelectedListener;
import android.widget.ArrayAdapter;
import android.widget.Spinner;

public class SeatActivity extends Activity {
	private Spinner rowSelector;
	private ArrayAdapter<CharSequence> rowSelectorAdapter;
	private List<CharSequence> rowList;
	
	public void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.seat);
		rowList = new ArrayList<CharSequence>();
		rowSelectorAdapter = new ArrayAdapter<CharSequence>(this,
		  android.R.layout.simple_spinner_item, rowList);
		rowSelectorAdapter.setDropDownViewResource(
		  android.R.layout.simple_spinner_dropdown_item);
		rowSelector = ((Spinner) this
		  .findViewById(R.id.textView1));
		rowSelector.setAdapter(rowSelectorAdapter);
		rowSelector.setOnItemSelectedListener(
		  new OnItemSelectedListener());
		rowSelectorAdapter.add("some String");
	}
	


}
